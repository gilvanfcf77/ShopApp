<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Id</th>
      <th scope="col">User</th>
      <th scope="col">Product</th>
      <th scope="col">Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.date %></td>
        <td><%= sale.id %></td>
        <td><%= sale.user_id %></td>
        <td><%= Product.find(sale.product_id).name %></td>
        <td><%= sale.amount %></td>
        <td><%= link_to 'Show', sale %></td>
        <% if current_user&.admin %>
          <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
          <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user&.admin %>
  <button type="button" class="btn btn-dark float-right">
    <%= link_to 'New Sale', new_sale_path,  :style=>'color:#FFFFFF;' %>
  </div>
<% end %> 


